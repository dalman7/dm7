<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="kr.co.dm7.blackpink.repository.mapper.UserXMLMapper">
    <resultMap id="userResultMap" type="kr.co.dm7.blackpink.domain.User">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>

    <sql id="ALL_FIELD">
        id, name
    </sql>

    <select id="select" resultMap="userResultMap" parameterType="string">
        SELECT
          <include refid="ALL_FIELD"/>
        FROM user
        WHERE id = #{id}
    </select>

    <select id="selectUserByname" resultType="kr.co.dm7.blackpink.domain.User">
        SELECT
          <include refid="ALL_FIELD"/>
        FROM user
        WHERE name = #{name}
    </select>

    <insert id="insert" parameterType="kr.co.dm7.blackpink.domain.User">
        INSERT INTO user (id, name)
        VALUES (#{id}, #{name})
    </insert>

    <update id="update" parameterType="kr.co.dm7.blackpink.domain.User">
        UPDATE user set
        name = #{name}
        WHERE id = #{id}
    </update>

</mapper>